{
    "compilerOptions": {
      "outDir": "./lib",
      "rootDir": "./",
      "target": "es5",
      "module": "ESNext",
      "lib": ["es2015"],
      "moduleResolution": "node",
      "noEmitOnError": true,
      "sourceMap": true,
      "strict": true,
      "strictFunctionTypes": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "alwaysStrict": true,
      "allowJs": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "declaration": true,
      "esModuleInterop": true
    },
    "include":  ["src"],
    "exclude": ["node_modules", "lib", "tests", "**/*.test.ts"]
  }